<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.celiachen.lectureexample0305.MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minLines="5"
        android:text="Name" />

    <Button
        android:id="@+id/internal_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:layout_marginStart="33dp"
        android:layout_marginTop="42dp"
        android:text="Internal Write"
        android:onClick="WriteInternalBtn"/>

    <Button
        android:id="@+id/internal_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/internal_write"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="43dp"
        android:text="Internal Read"
        android:onClick="ReadInternalBtn"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/internal_read"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="TextView" />

    <Button
        android:id="@+id/external_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/internal_write"
        android:layout_below="@+id/textView"
        android:layout_marginTop="90dp"
        android:text="External Write" />

    <Button
        android:id="@+id/external_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/internal_read"
        android:layout_alignTop="@+id/external_write"
        android:text="External Read" />
</RelativeLayout>
